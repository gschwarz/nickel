<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:with field='i18n' type='com.rhiscom.bpm.console.client.LocaleMessages'/> 	
	<ui:style src="Login.css" />
	<g:FlowPanel>
	 <g:HTMLPanel>
	 	<div id="backgroundLogin">
	  </div>
	  </g:HTMLPanel>
	 <g:HTMLPanel width="400px" height="190px"  styleName="{style.loginTable}">
	
	 <table width="100%" height="100%" cellspacing="0" cellpadding="0" valign="top" class="shadow">
	     
	<tr>
	    <td width="100%" align="center" heigth="70px" >
	    <div style="heigth=70px;">
	        <strong> <ui:text from='{i18n.loginTitle}'/></strong>
	        </div>
	        <hr/>
		</td>
	</tr>
	
			<tr>
		        
		         <td align="center">
		         <g:Label ui:field="lblError"  styleName="{style.lblError}" height="20px"></g:Label>
		         </td>	
		    </tr>     
		<tr>
		    
		<td>
			    
	     <table width="100%" height="100%" cellspacing="0" cellpadding="0" valign="top" class="shadow">
	         
	        
	             <tr>
	             <td  width="100%" style="padding: 10px;">
	                 
	       <table width="100%" height="100%" cellspacing="0" cellpadding="0" valign="top">
	       
		     <tr>
		           <td width="70px" align="left"  style="height:20px;">
		              <span><ui:text from='{i18n.user}'/> :</span> 
		             </td>
		            
		           <td width="90px" align="left"  style="height:20px;"> <g:TextBox ui:field="Username" width="90px" height="20px"/> </td>
		            
	          </tr>
	          <tr>
		           <td width="70px" align="left"  style="height:20px;">   
		               <span><ui:text from='{i18n.password}'/> :</span>
  </td>
		           <td width="90px" align="left"  style="height:20px;">    <g:PasswordTextBox ui:field="password" width="90px" height="20px" /> </td>
	           </tr>
	              <tr>
	                  <td colspan="2"  width="300px" class="alignRight"  style="height:20px;">
	                      <div style="margin-top:10px;right:0px;float:right;margin-right:2px;">
	                			<g:Button text="{i18n.login}" ui:field="button" height="25px"  width="80px"/>
	                	 </div>
	                </td>
	                </tr>
	          </table>
	                 
	             </td>
	         </tr>
	        
	     </table>
	    </td>
	   </tr>
	   
	    </table>
	    
	       
	         
       	 </g:HTMLPanel>
</g:FlowPanel>
</ui:UiBinder> 